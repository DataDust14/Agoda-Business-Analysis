CREATE TABLE Hotels (
    Hotel_id INT PRIMARY KEY,
    Hotel_name VARCHAR(255) NOT NULL,
    Price DECIMAL(10, 2) NOT NULL,
    Country VARCHAR(255) NOT NULL,
    Continent VARCHAR(255) NOT NULL,
    Country_id INT NOT NULL
);

